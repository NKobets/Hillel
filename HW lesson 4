# Task 1
while True:
    input_var = input("Enter the word with 'o': ")
    if 'o' in input_var.lower():
        print("Entered word is: " + input_var)
        break
    else:
        print("Please, try again.")


#Task 2
lst1 = ['1', '2', 3, True, 'False', 5, '6', 7, 8, 'Python', 9, 0, 'Lorem Ipsum']
lst2 =[]
for item in lst1:
    if isinstance(item,str):
        lst2.append(item)
print(lst2) 


